{
  "javascripts" : {
    "{%= name %}" : {
      "src" : [
        "assets/src/javascripts/{%= name %}/*.js",
        "assets/src/javascripts/{%= name %}/**/*.js"
      ]
    },

    "{%= name %}.vendor" : {
      "options" : {
        "skipLint" : true
      },
      "src" : [
        "assets/src/vendor/*.js",
        "assets/src/vendor/**/*.js"
      ]
    }
  },


  "stylesheets" : {
    "screen" : {
      "src" : [
        "assets/src/stylesheets/screen/screen.scss",
        "assets/src/stylesheets/screen/**/*.scss"
      ]
    }
  }
}