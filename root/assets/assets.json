{
  "javascripts" : {
    "<%= pkg.name %>" : {
      "src" : [
        "assets/src/javascripts/<%= pkg.name %>/*.js",
        "assets/src/javascripts/<%= pkg.name %>/**/*.js"
      ]
    },

    "<%= pkg.name %>.vendor" : {
      "options" : {
        "skipWatch": true,
        "skipLint" : true
      },
      "src" : [
        "assets/src/vendor/*.js",
        "assets/src/vendor/**/*.js"
      ]
    }
  },


  "stylesheets" : {
    "screen" : {
      "src" : [
        "assets/src/stylesheets/screen/screen.scss",
        "assets/src/stylesheets/screen/**/*.scss"
      ]
    }
  }
}